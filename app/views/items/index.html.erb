<h1>All Items</h1>

<% if @items.present? %>
  <ul>
    <% @items.each do |item| %>
      <li>
        <strong><%= link_to item.name, item_path(item) %></strong><br>
        <%= item.description %><br>
        <strong>Price:</strong> <%= number_to_currency(item.price, unit: "â‚¬") %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No items available.</p>
<% end %>
